<?xml version="1.0" encoding="utf-8"?>
<extension version="3.2" type="plugin" group="content" method="upgrade">
	<name>PLG_CONTENT_JBM_DONATION</name>
	<author>Lex, AllDar</author>
	<creationDate>10.02.2012</creationDate>
	<copyright>(c) 2012 - 2014 NorrNext</copyright>
	<license>GNU General Public License version 3 or later; see license.txt</license>
	<authorEmail>support@norrnext.com</authorEmail>
	<authorUrl>http://norrnext.com</authorUrl>
	<version>1.0.0</version>
	<description>PLG_CONTENT_JBM_DONATION_DESCRIPTION</description>
	<files>
		<filename plugin="jmb_donation">jmb_donation.php</filename>
		<folder>layouts</folder>
		<folder>language</folder>
	</files>
	<media destination="plg_jmb_donation" folder="media">
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
	</media>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="def_provider" type="list"
					default="paypal"
					label="PLG_CONTENT_JBM_DONATION_PROVIDER_LABEL"
					description="PLG_CONTENT_JBM_DONATION_PROVIDER_DESC">
					<option value="paypal">PayPal</option>
					<option value="yandex">Yandex</option>
				</field>

				<field name="def_merchant" type="text"
					label="PLG_CONTENT_JBM_DONATION_MERCHANT_LABEL"
					description="PLG_CONTENT_JBM_DONATION_MERCHANT_DESC"
				/>

				<field name="def_amount" type="text"
					default="10"
					label="PLG_CONTENT_JBM_DONATION_AMOUNT_LABEL"
					description=""
				/>
			</fieldset>
		</fields>
	</config>
	<updateservers>
		<server type="extension" priority="1" name="jmb_donation">http://joomlablog.ru/updates/jmb/plugins/jmb_donation.xml</server>
	</updateservers>
</extension>
